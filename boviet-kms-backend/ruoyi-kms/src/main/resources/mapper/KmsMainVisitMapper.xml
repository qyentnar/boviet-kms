<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.kms.mapper.KmsMainVisitMapper">
    
    <resultMap type="com.ruoyi.kms.vo.KmsMainVisitVo" id="KmsMainVisitResult">
        <result property="id"    column="id"    />
        <result property="kmsId"    column="kms_id"    />
        <result property="userVisited"    column="user_visited"    />
        <result property="nickName"    column="nick_name"    />
        <result property="deptName"    column="dept_name"    />
        <result property="visitCount"    column="visit_count"    />
        <result property="vote"    column="vote"    />
        <result property="readStage"    column="read_stage"    />
        <result property="visitTime"    column="visit_time"    />
    </resultMap>

    <sql id="selectKmsMainVisitVo">
        select a.id, a.kms_id, a.user_visited, b.nick_name, c.dept_name, a.visit_count, a.vote, a.read_stage, a.visit_time
        from kms_main_visit a inner join sys_user b on a.user_visited = b.user_name 
            inner join sys_dept c on b.dept_id = c.dept_id
    </sql>

    <select id="selectKmsMainVisitList" parameterType="KmsMainVisit" resultMap="KmsMainVisitResult">
        <include refid="selectKmsMainVisitVo"/>
        <where>  
            <if test="kmsId != null "> and kms_id = #{kmsId}</if>
            <if test="userVisited != null  and userVisited != ''"> and user_visited = #{userVisited}</if>
            <if test="visitCount != null "> and visit_count = #{visitCount}</if>
            <if test="vote != null "> and vote = #{vote}</if>
        </where>
    </select>
    
    <select id="selectKmsMainVisitById" parameterType="Long" resultMap="KmsMainVisitResult">
        <include refid="selectKmsMainVisitVo"/>
        where id = #{id}
    </select>

    <select id="selectKmsMainVisitByUserVisited" parameterType="KmsMainVisit" resultMap="KmsMainVisitResult">
        <include refid="selectKmsMainVisitVo" /> where user_visited = #{userVisited} and kms_id = #{kmsId}
    </select>
        
    <insert id="insertKmsMainVisit" parameterType="KmsMainVisit" useGeneratedKeys="true" keyProperty="id">
        insert into kms_main_visit
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="kmsId != null">kms_id,</if>
            <if test="userVisited != null">user_visited,</if>
            <if test="visitCount != null">visit_count,</if>
            <if test="vote != null">vote,</if>
            <if test="visitTime != null">visit_time,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="kmsId != null">#{kmsId},</if>
            <if test="userVisited != null">#{userVisited},</if>
            <if test="visitCount != null">#{visitCount},</if>
            <if test="vote != null">#{vote},</if>
            <if test="visitTime != null">#{visitTime},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateKmsMainVisit" parameterType="KmsMainVisit">
        update kms_main_visit
        <trim prefix="SET" suffixOverrides=",">
            <if test="kmsId != null">kms_id = #{kmsId},</if>
            <if test="userVisited != null">user_visited = #{userVisited},</if>
            <if test="visitCount != null">visit_count = #{visitCount},</if>
            <if test="vote != null">vote = #{vote},</if>
            <if test="visitTime != null">visit_time = #{visitTime},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteKmsMainVisitById" parameterType="Long">
        delete from kms_main_visit where id = #{id}
    </delete>

    <delete id="deleteKmsMainVisitByIds" parameterType="String">
        delete from kms_main_visit where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>